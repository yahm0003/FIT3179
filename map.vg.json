{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Health Expenditure by State in Australia",
    "width": 500,
    "height": 400,
    "projection": {
      "type": "equirectangular"
    },
    "data": {
      "url": "ne_10m_admin_1_states_provinces.json",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_admin_1_states_provinces"
      }
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "healthexpenditurebyareaandsource.csv"
          },
          "key": "state",
          "fields": ["real_expenditure_millions"]
        }
      },
      {
        "calculate": "datum.real_expenditure_millions || 0",
        "as": "Total_Expenditure"
      }
    ],
    "mark": {
      "type": "geoshape",
      "stroke": "black",
      "strokeWidth": 0.5
    },
    "encoding": {
      "color": {
        "field": "Total_Expenditure",
        "type": "quantitative",
        "scale": {
          "scheme": "blues"
        },
        "title": "Total Expenditure (Millions $)"
      },
      "tooltip": [
        {
          "field": "properties.name",
          "type": "nominal",
          "title": "State"
        },
        {
          "field": "Total_Expenditure",
          "type": "quantitative",
          "title": "Total Expenditure (Millions $)"
        }
      ]
    }
  }